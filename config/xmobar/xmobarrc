-- -*-Haskell-*-
Config { font = "xft:Hack Nerd Font:pixelsize=16:antialias=true:hinting=true"
       , additionalFonts = [ "xft:FontAwesome:pixelsize=13" ]
       , bgColor      = "#383c4a"
       , fgColor      = "#cccccc"
       , position     = Top
       , lowerOnStart = True
       , hideOnStart  = False
       , allDesktops  = True
       , persistent    = True
       , iconRoot     = "/home/medivhok/.xmonad/xpm/"
       , commands = [ Run Cpu ["-t","<icon=cpu_20.xpm/> cpu <total>%","-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t", "<icon=memory-icon_20.xpm/> mem <usedratio>%"] 10
                    , Run Date "%a %b %_d %l:%M" "date" 10
                    , Run DiskU [("/", "<icon=harddisk-icon_20.xpm/> hdd (<used>/<size>)")] [] 3600
                    , Run UnsafeStdinReader
                    ]
       , sepChar      = "%"
       , alignSep     = "}{"
       , template = " <icon=menu.xpm/> %UnsafeStdinReader% }{ <fc=#b8bb26>%cpu%</fc> <fc=#d3869b>%memory%</fc> <fc=#83a598>%disku%</fc> <icon=calendar-clock-icon_20.xpm/> <fc=#fe8019>%date%</fc> "
       }
