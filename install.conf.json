[
  {
    "defaults": {
      "link": {
        "create": true,
        "relink": true
      }
    }
  },
  {
    "clean": ["~"]
  },
  {
    "link": {
      "~/.config/alacritty": ".config/alacritty",
      "~/.config/compton.conf": ".config/compton.conf",
      "~/.config/doom": ".config/doom",
      "~/.config/goa-1.0": ".config/goa-1.0",
      "~/.config/gtk-2.0": ".config/gtk-2.0",
      "~/.config/gtk-3.0": ".config/gtk-3.0",
      "~/.config/rofi": ".config/rofi",
      "~/.config/xmobar": ".config/xmobar",
      "~/.config/zsh": ".config/zsh",
      "~/.local/share/oh-my-zsh": ".local/share/oh-my-zsh",
      "~/.local/share/zsh-custom": ".local/share/zsh-custom",
      "~/.vim": ".vim",
      "~/.vimrc": ".vimrc",
      "~/.Xresources": ".Xresources",
      "~/.xmonad": ".xmonad",
      "~/.zshenv": ".zshenv"
    }
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"]
    ]
  }
]
