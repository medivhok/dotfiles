[
  {
    "defaults": {
      "link": {
        "create": true,
        "relink": true
      }
    }
  },
  {
    "clean": ["~"]
  },
  {
    "link": {
      "~/.config/alacritty": "src/.config/alacritty",
      "~/.config/compton.conf": "src/.config/compton.conf",
      "~/.config/doom": "src/.config/doom",
      "~/.config/goa-1.0": "src/.config/goa-1.0",
      "~/.config/gtk-2.0": "src/.config/gtk-2.0",
      "~/.config/gtk-3.0": "src/.config/gtk-3.0",
      "~/.config/gtk-4.0": "src/.config/gtk-4.0",
      "~/.config/rofi": "src/.config/rofi",
      "~/.config/xmobar": "src/.config/xmobar",
      "~/.config/zsh": "src/.config/zsh",
      "~/.local/share/oh-my-zsh": "src/.local/share/oh-my-zsh",
      "~/.local/share/zsh-custom": "src/.local/share/zsh-custom",
      "~/.vim": "src/.vim",
      "~/.vimrc": "src/.vimrc",
      "~/.Xresources": "src/.Xresources",
      "~/.xmonad": "src/.xmonad",
      "~/.zshenv": "src/.zshenv"
    }
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"]
    ]
  }
]
